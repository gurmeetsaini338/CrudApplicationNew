@model CrudApplication.Models.EmpModel
@{
    ViewData["Title"] = "EditEmployee";
}

<div class="container">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card">
                <div class="crad-header">
                    <h1 class="text-center text-primary">Edit Employee</h1>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="EditEmployee">
                        <div class="form-group">
                            <lable asp-for="Name">Name</lable>
                            <input type="hidden" asp-for="Id" />
                            <input type="text" asp-for="Name" class="form-control"
                                   placeholder="Enter employee name" />
                        </div>
                        <div class="form-group">
                            <lable asp-for="City"> City</lable>
                            <input type="text" asp-for="City" class="form-control"
                                   placeholder="Enter city name" />
                        </div>
                        <div class="form-group">
                            <lable asp-for="State">State</lable>
                            <input type="text" asp-for="State" class="form-control"
                                   placeholder="Enter state name" />
                        </div>
                        <div class="form-group">
                            <lable asp-for="Salary">Salary</lable>
                            <input type="text" asp-for="Salary" class="form-control"
                                   placeholder="Enter salary " />
                        </div>
                        <div class="from-group">
                            <input type="submit" value="Submit" class="btn btn-sm btn-success floatright" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>