@model IEnumerable<CrudApplication.Models.Image>
@{
    ViewData["Title"] = "Index";
}
<div class="container">
    <div class="row">
        <div class="col-6 offset-3">
            <a class="btn btn-sm btn-success m-1" asp-controller="Upload" asp-action="UploadImage">Upload</a>
            <table class="table table-bordered">
                <thead>
                    <tr class="text-center">
                        <th>Id</th>
                        <th>Name</th>
                        <th>Image</th>
                        <th>Action</th>
                    </tr>
                </thead>
                @foreach(var d in Model)
                {
                    <tr class="text-center">
                        <td>@d.Id</td>
                        <td>@d.Name</td>
                        <td><img src="@d.ImagePath" height="50x;"width="100px;" /></td>
                        <td>
                            <a class=" btn btn-sm btn-danger" asp-action="Delete" asp-controller="Upload"asp-route-id="@d.Id">Delete</a>
                            <a class=" btn btn-sm btn-info" asp-action="Update" asp-controller="Upload" asp-route-id="@d.Id">Update</a>
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>
